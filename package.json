{
  "name": "word-map",
  "description": "Fast way to convert fixed length text",
  "repository": "https://github.com/asiloisad/pulsar-word-map",
  "keywords": [
    "word",
    "map",
    "greek",
    "letter",
    "snippets"
  ],
  "version": "1.0.5",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "activationCommands": {
    "atom-text-editor": [
      "word-map:auto",
      "word-map:selected",
      "word-map:fixed-1",
      "word-map:fixed-2",
      "word-map:fixed-3",
      "word-map:fixed-4",
      "word-map:fixed-5"
    ]
  },
  "configSchema": {
    "silentQ": {
      "order": 1,
      "title": "Silent mode",
      "description": "Silent the warning messages.",
      "type": "boolean",
      "default": false
    },
    "customMAP": {
      "order": 2,
      "title": "Custom mapping",
      "description": "Custom mapping rules. This field should be a valid dictonary mapping without brackets e.g. `s:σ, σ:s`.",
      "type": "string",
      "default": ""
    }
  }
}
